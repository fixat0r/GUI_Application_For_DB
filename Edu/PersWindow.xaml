<Window x:Class="Edu.PersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edu"
        mc:Ignorable="d"
        Title="PersWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgPers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,114"/>
        <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="26,359,0,0" VerticalAlignment="Top" Height="43" Width="94" Click="btnAdd_Click"/>
        <Button x:Name="btnEdit" Content="Изменить" HorizontalAlignment="Left" Margin="255,359,0,0" VerticalAlignment="Top" Height="43" Width="94" Click="btnEdit_Click"/>
        <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="140,359,0,0" VerticalAlignment="Top" Height="43" Width="94" Click="btnDelete_Click"/>
        <Button x:Name="btnClose" Content="Закрыть" HorizontalAlignment="Left" Margin="690,376,0,0" VerticalAlignment="Top" Height="43" Width="94" Click="btnClose_Click"/>

    </Grid>
</Window>
